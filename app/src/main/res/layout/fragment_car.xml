<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#359bca"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="src.fragments.FragmentCar">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/car_title"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/car_EDT_carNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="מספר רכב"
                android:inputType="numberDecimal"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <EditText
                android:id="@+id/car_EDT_carColor"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="צבע"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <EditText
                android:id="@+id/car_EDT_carManu"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/rounded_edit_text"
                android:cursorVisible="false"
                android:hint="יצרן"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/car_menu"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/colorPrimary">

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#3F51B5"
                    android:cursorVisible="false"
                    android:hint="@string/ownership"
                    android:inputType="none"
                    android:textColor="@color/background_text_color"
                    android:textSize="20sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/car_BTN_continue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/continue_next_page"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:theme="@style/Theme.MaterialComponents.NoActionBar"
                app:cornerRadius="20dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>