<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#359bca"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="src.fragments.FragmentDocuments">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/documents"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/residential_EDT_city"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/city"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <EditText
                android:id="@+id/residential_EDT_street"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/street"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

                <EditText
                    android:id="@+id/residential_EDT_houseNumber"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edit_text"
                    android:cursorVisible="false"
                    android:hint="@string/houseNumber"
                    android:inputType="date"
                    android:textColor="#86818E"
                    android:textColorHint="#86818E" />

            <EditText
                android:id="@+id/residential_EDT_apartmentNumber"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/apartmentNumber"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <EditText
                android:id="@+id/residential_EDT_postalCode"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_edit_text"
                android:hint="@string/postalCode"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="#86818E"
                android:textColorHint="#86818E" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                android:layoutDirection="rtl">

                <RadioButton
                    android:id="@+id/residential_RB_permanent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:text="@string/permanentTenant"/>

                <RadioButton
                    android:id="@+id/residential_RB_rent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:text="@string/rentTenant"/>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/documents_BTN_finish"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:text="@string/continue_next_page"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="2dp"
                android:theme="@style/Theme.MaterialComponents.NoActionBar"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>